{
	"name": "dereuromark/cakephp-dto",
	"description": "CakePHP DTO Plugin",
	"license": "MIT",
	"type": "cakephp-plugin",
	"keywords": [
		"cakephp",
		"dto",
		"plugin"
	],
	"authors": [
		{
			"name": "Mark Scherer",
			"homepage": "https://www.dereuromark.de",
			"role": "Maintainer"
		},
		{
			"name": "Timur Asaliev",
			"homepage": "https://github.com/Asaliev",
			"role": "Developer"
		},
		{
			"name": "Other contributors",
			"homepage": "https://github.com/dereuromark/cakephp-dto/graphs/contributors",
			"role": "Developer"
		}
	],
	"homepage": "https://github.com/dereuromark/cakephp-dto/",
	"support": {
		"issues": "https://github.com/dereuromark/cakephp-dto/issues",
		"source": "https://github.com/dereuromark/cakephp-dto/"
	},
	"require": {
		"php": ">=8.2",
		"ext-json": "*",
		"cakephp/cakephp": "^5.1.1",
		"cakephp/twig-view": "^2.0.1",
		"sebastian/diff": "^6.0.0 || ^7.0.0",
		"php-collective/dto": "dev-feature/serialize-convenience-methods as 0.1.11"
	},
	"require-dev": {
		"ext-dom": "*",
		"ext-libxml": "*",
		"fig-r/psr2r-sniffer": "dev-master",
		"nette/neon": "^2.4 || ^3.2",
		"phpunit/phpunit": "^11.5 || ^12.1 || ^13.0"
	},
	"suggest": {
		"nette/neon": "If you want to add a NEON file engine instead of XML."
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"autoload": {
		"psr-4": {
			"CakeDto\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"CakeDto\\Test\\": "tests/",
			"Sandbox\\": "tests/test_app/plugins/Sandbox/src/",
			"TestApp\\": "tests/test_app/src/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"cs-check": "phpcs --colors --parallel=16",
		"cs-fix": "phpcbf --colors --parallel=16",
		"generate": "php tests/generate.php",
		"generate-dry": "php tests/generate.php --dry-run",
		"stan": "phpstan analyze",
		"stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^2.0.0 && mv composer.backup composer.json",
		"stan-tests": "phpstan analyze -c tests/phpstan.neon tests/TestCase/",
		"lowest": "validate-prefer-lowest",
		"lowest-setup": "composer update --prefer-lowest --prefer-stable --prefer-dist --no-interaction && cp composer.json composer.backup && composer require --dev dereuromark/composer-prefer-lowest && mv composer.backup composer.json",
		"test": "phpunit",
		"test-coverage": "phpunit --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/php-collective/dto"
		}
	]
}

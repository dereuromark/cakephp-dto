<?xml version="1.0"?>
<dtos
	xmlns="cakephp-dto"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="cakephp-dto https://github.com/dereuromark/cakephp-dto">

	<dto name="Book" immutable="true">
		<field name="pages" type="Page[]" collectionType="\Cake\Collection\CollectionInterface"/>
	</dto>

	<dto name="Page" immutable="true">
		<field name="number" type="int" required="true"/>
		<field name="content" type="string"/>
	</dto>

</dtos>
